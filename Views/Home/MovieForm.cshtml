@{
    ViewData["Title"] = "Movie Form";
}

@model Assignment_3.Models.MovieFormModel

<div>
    <p>Welcome to the movie form. Please enter your info below:</p>

    <form asp-action="MovieForm" method="post" >

        <label for="category" asp-for="Category">Category:</label><br>
        <input type="text" id="category" asp-for="Category"><br>

        <label for="title" asp-for="Title">Title:</label><br>
        <input type="text" id="title" asp-for="Title"><br>

        <label for="year" asp-for="Year">Year: </label><br>
        <input type="text" id="year" asp-for="Year"><br>

        <label for="director" asp-for="Director">Director: </label><br>
        <input type="text" id="director" asp-for="Director"><br>

        <!-- Dropdown menu: -->
        <label for="rating" asp-for="Rating">Rating: </label><br>
        <select name="rating" id="rating" asp-for="Rating">
            <option value="">Choose one</option>
            <option value="g">G</option>
            <option value="pg">PG</option>
            <option value="pg13">PG-13</option>
            <option value="r">R</option>
        </select>
        <br />

        <label for="edited" asp-for="Edited">Edited: </label><br>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />


        <label for="lentto" asp-for="Lentto">Lent to: </label><br>
        <input type="text" id="lentto" asp-for="Lentto"><br />

        <label for="notes" asp-for="Notes">Notes: </label><br>
        <input type="text" id="notes" asp-for="Notes"><br />

        <br><br>

        <input type="submit" value="Submit" name="submitButton" id="submitButton">

    </form>
    <div asp-validation-summary="All"></div>

</div>