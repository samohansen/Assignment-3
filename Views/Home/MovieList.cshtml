@{
    ViewData["Title"] = "Movie List";
}

@model IEnumerable<Assignment_3.Models.MovieFormModel>

<div>
    <p>Welcome. Below is the list of movies that have been entered:</p>

    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent to</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Assignment_3.Models.MovieFormModel x in Model)
            {
                <tr>
                    <td>@x.category</td>
                    <td>@x.title</td>
                    <td>@x.year</td>
                    <td>@x.director</td>
                    <td>@x.rating</td>
                    <td>@x.edited</td>
                    <td>@x.lentto</td>
                    <td>@x.notes</td>
                </tr>

            }
        </tbody>
    </table>

</div>
